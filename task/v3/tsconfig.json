{
  "compilerOptions": {
    "strict": true,
    "useUnknownInCatchVariables": false,
    "module": "commonjs",
    "target": "es2022",
    "noImplicitAny": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "types": ["@types/mocha","mocha","node"]
  },
  "exclude": [
    "node_modules"
  ]
}